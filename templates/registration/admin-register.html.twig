{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<section class='form-login d-flex flex-column align-items-center justify-content-center p-5'>
    <div class='w-50 p-5'>
        <h1 class='text-align-center'>Inscription Administrateur</h1>
         {{ form_start(registrationForm,{'attr': {'class': 'form-control p-5 '}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control '}}) }}
        {{ form_row(registrationForm.username, {'attr': {'class': 'form-control '}}) }}
        {{ form_row(registrationForm.roles, {'attr': {'class': 'form-control '}}) }} 
        {{ form_row(registrationForm.password, {label: 'Password','attr': {'class': 'form-control '}}) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'm-2'}}) }}

        <button type="submit" class="btn btn-lg btn-primary m-2" style="background-color:#DC5E44 ;">Register</button>
    {{ form_end(registrationForm) }}
    </div>
</section>
{% endblock %}

